<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pp.Dept" table="deptdb">
        <id name="deptId" column="dId" type="integer" length="10">
        	<generator class="assigned"></generator>
        </id>
        <property name="deptName" column="dName" type="string" length="20"></property>
        <property name="deptDesc" column="dDesc" type="string" length="20"></property>
    </class>

</hibernate-mapping>